{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/chat.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    { "source": "/api/chat", "destination": "/api/chat.py" },
    { "source": "/(.*)", "destination": "/frontend/$1" } // Esta rota pode precisar de ajuste ou ser removida se o Next.js lidar com tudo
  ]
}
